# Allow only specific image file types
<FilesMatch "\.(jpg|jpeg|png|gif)$">
    Order Allow,Deny
    Allow from all
</FilesMatch>

# Deny everything else
<FilesMatch "^(?!.*\.(jpg|jpeg|png|gif)$).*$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Prevent execution of scripts
Options -ExecCGI
AddHandler cgi-script .php .pl .py .jsp .asp .sh .cgi